{
  "manifest_version": 3,
  "name": "aiTools",
  "description": "网站增强工具集 - 为特定网站提供自动化功能",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "clipboardWrite",
    "sidePanel"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/images/icon16_active.png",
    "48": "/images/icon48_active.png",
    "128": "/images/icon128_active.png"
  },
  "action": {
    "default_icon": {
      "16": "/images/icon16_active.png",
      "48": "/images/icon48_active.png",
      "128": "/images/icon128_active.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["https://i.pinimg.com/*"],
      "js": ["content_scripts/utils.js", "content_scripts/pinterest_content.js"]
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["content_scripts/utils.js", "content_scripts/chatgpt_enhancer.js"]
    },
    {
      "matches": ["https://www.behance.net/*"],
      "js": ["content_scripts/utils.js", "content_scripts/behance.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://medium.com/*", "https://levelup.gitconnected.com/"],
      "js": ["content_scripts/utils.js", "content_scripts/medium_content.js"]
    },
    {
      "matches": ["https://speed.measurementlab.net/*"],
      "js": ["content_scripts/utils.js", "content_scripts/speed_lab.js"]
    },
    {
      "matches": ["https://www.perplexity.ai/*"],
      "js": ["content_scripts/utils.js", "content_scripts/perplexity_content.js"]
    },
    {
      "matches": ["https://zhuanlan.zhihu.com/*"],
      "js": ["content_scripts/utils.js", "content_scripts/zhihu_content.js"]
    },
    {
      "matches": ["http://lao-qian.hxwk.org/*"],
      "js": ["content_scripts/utils.js", "content_scripts/laoqian_content.js"]
    },
    {
      "matches": ["https://www.guwendao.net/*"],
      "js": ["content_scripts/utils.js", "content_scripts/guwendao_content.js"]
    },
    {
      "matches": ["https://x.com/i/grok*"],
      "js": ["content_scripts/utils.js", "content_scripts/grok_content.js"]
    },
    {
      "matches": ["https://news.ycombinator.com/*"],
      "css": ["content_scripts/hacker_news/styles.css"],
      "js": ["content_scripts/hacker_news/content.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "Nunito-fonts/Nunito-Bold.ttf",
        "Nunito-fonts/Nunito-SemiBold.ttf"
      ],
      "matches": ["https://news.ycombinator.com/*"]
    }
  ]
}
