{
  "manifest_version": 3,
  "name": "aiTools",
  "description": "网站增强工具集 - 为特定网站提供自动化功能",
  "version": "1.0",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "downloads",
    "tabs",
    "clipboardWrite"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "/images/icon16_active.png",
    "48": "/images/icon48_active.png",
    "128": "/images/icon128_active.png"
  },
  "action": {
    "default_icon": {
      "16": "/images/icon16_active.png",
      "48": "/images/icon48_active.png",
      "128": "/images/icon128_active.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
   
    {
      "matches": ["https://i.pinimg.com/*"],
      "js": ["pinterest_content.js"]
    },
    {
      "matches": ["https://chatgpt.com/*"],
      "js": ["chatgpt_enhancer.js"]
    },
    {
      "matches": ["https://www.behance.net/*"],
      "js": ["behance.js"],
      "run_at": "document_end" 
    },

    {
      "matches": [
        "https://medium.com/*", "https://levelup.gitconnected.com/"],
      "js": ["medium_content.js"]
    },
    {
      "matches": ["https://speed.measurementlab.net/*"],
      "js": ["speed_lab.js"]
    }
  ]
}
